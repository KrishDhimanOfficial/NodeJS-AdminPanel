<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card card-primary">
                <div class="card-header bg-primary">
                    <h3 class="card-title">Add Information</h3>
                </div>
                <form id="SubmitForm" enctype="application/x-www-form-urlencoded">
                    <div class="card-body">
                        <div class="form-group mb-2">
                            <input type="text" class="form-control" name="name"
                                placeholder="Name">
                        </div>
                        <div class="form-group mb-2">
                            <input type="email" class="form-control" name="email"
                                placeholder="email">
                        </div>
                         <div class="form-group mb-2">
                            <input type="file" class="form-control" multiple name="image"/>
                        </div>
                           <div class="form-group mb-2">
                            <input type="file" class="form-control"  name="doc"/>
                        </div>
                        <div class="form-group mb-2">
                            <input type="password" class="form-control" name="password"
                                placeholder="password">
                        </div>
                    </div>
                    <div class="modal-footer justify-content-between">
                        <button id="submitFormBtn" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>