<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">

            <!-- Profile Image -->
            <div class="card card-primary card-outline" style="border-top-color: #6f42c1;">
                <div class="card-body box-profile">
                    <div class="text-center">
                        <img class="profile-user-img img-fluid img-circle"
                            src="<%= admin.profile ? `/${admin.profile}` : '/assets/images/user.png' %>"
                            alt="User profile picture">
                    </div>
                    <h3 class="profile-username text-center">
                        <%= admin.name.split(' ')[0].charAt(0).toUpperCase() + admin.name.split(' ')[0].slice(1) %>
                    </h3>

                    <p class="text-muted text-center">
                        <%= admin.role %>
                    </p>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
        <div class="col-md-9">
            <div class="card">
                <div class="card-header p-2">
                    <ul class="nav nav-pills">
                        <li class="nav-item">
                            <a class="nav-link <%= locals.active %>" href="#settings" data-toggle="tab">
                                Settings
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= locals.pactive %>" href="#password" data-toggle="tab">
                                Change Password
                            </a>
                        </li>
                    </ul>
                </div><!-- /.card-header -->
                <div class="card-body">
                    <div class="tab-content">
                        <div class="tab-pane <%= locals.active %>" id="settings">
                            <form id="SubmitForm" class="form-horizontal">
                                <div class="form-group row">
                                    <label for="inputName" class="col-sm-2 col-form-label">Name</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" name="name" id="inputName"
                                            placeholder="Name" value="<%= admin.name %>">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
                                    <div class="col-sm-10">
                                        <input type="email" class="form-control" name="email" id="inputEmail"
                                            placeholder="Email" value="<%= admin.email %>">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="phone" class="col-sm-2 col-form-label">Phone</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" name="phone" id="phone"
                                            placeholder="Phone" value="<%= admin.phone %>">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="image" class="col-sm-2 col-form-label">Upload Image</label>
                                    <div class="col-sm-10">
                                        <input type="file" class="form-control" name="profile" id="image">
                                        <span>
                                            <b>Note: </b>Image size should be less than 1MB</b>
                                        </span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="offset-sm-2 col-sm-10">
                                        <button id="submitFormBtn" class="btn btn-dark">update profile</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="tab-pane <%= locals.pactive %>" id="password">
                            <form action="<%= updatapassword %>" class="form-horizontal" method="post" autocomplete="off">
                                <div class="form-group row">
                                    <label for="oldPassword" class="col-sm-2 col-form-label">Old Password</label>
                                    <div class="col-sm-10">
                                        <input type="password" class="form-control" name="oldpassword" id="oldPassword"
                                            placeholder="old Password">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="newPassword" class="col-sm-2 col-form-label">New Password</label>
                                    <div class="col-sm-10">
                                        <input type="password" class="form-control" name="password" id="newPassword"
                                            placeholder="New Password">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="offset-sm-2 col-sm-10">
                                        <button  class="btn btn-dark">change password</button>
                                    </div>
                                </div>
                            <% if (locals.error || locals.success) { %>
                                <div class="alert <%= locals.error ? 'alert-danger' : 'alert-success' %> alert-danger mt-2" role="alert">
                                    <%= locals.error || locals.success %>
                                </div>
                                <% } %>
                            </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>