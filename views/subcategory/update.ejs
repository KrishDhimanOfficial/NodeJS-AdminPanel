<div class="container">
        <div class="row">
            <div class="col-12">
            <div class="card card-primary">
                <div class="card-header bg-purple">
                <h3 class="card-title">Update Subcategory Information</h3>
                </div>
                <form id="updateForm" data-id="<%= response._id %>">
                    <div class="card-body">
                        
                <div class="mb-3">
                    <label for="name" class="form-label mb-2">Name</label>
                    <input type="text"  name="name" value="<%= response.name %>" class="form-control" id="name" placeholder="name">
                </div>

                <div class="mb-3">
                    <label for="categoryId" class="form-label mb-2">Parent_category</label>
                    <select name="categoryId"   data-selectbox="true" class="form-control" id="category">
                        <option value="<%= response.categoryId?._id %>" selected>
                            <%= response.categoryId?.name %>
                            </option>
                    </select>
                </div>
                    </div>
                <div class="modal-footer justify-content-between">
                    <button id="submitFormBtn" class="btn btn-dark">Submit</button>
                </div>
                </form>
            </div>
            </div>
        </div>
    </div>