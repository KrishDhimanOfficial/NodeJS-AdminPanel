<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
        <%= locals.title ? title : '' %>
    </title>
    <link rel="shortcut icon" href="/assets/images/user.png" type="image/x-icon">

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">

    <!-- Vendor / Custom CSS -->
    <link rel="stylesheet" href="/assets/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/css/all.min.css">
    <link rel="stylesheet" href="/assets/vendor/pace-progress/pace-theme-flat-top.css">
    <link rel="stylesheet" href="/assets/vendor/notify/notify.css">
    <link rel="stylesheet" href="/assets/vendor/select2/css/select2.min.css">
    <link rel="stylesheet" href="/assets/vendor/adminlte/adminlte.min.css">
    <link rel="stylesheet" href="/assets/vendor/summernote/summernote.min.css">
    <link rel="stylesheet" href="/assets/css/app.css">
</head>

<body class="hold-transition sidebar-collpase layout-navbar-fixed p-0">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light" style="border-bottom:none ;">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/admin" class="nav-link">Home</a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown user-menu">
                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
                        <img src="<%= admin.profile ? `/${admin.profile}` : '/assets/images/user.png' %>"
                            class="user-image img-circle elevation-2" alt="User Image">
                        <span class="d-none d-md-inline">
                            <%= admin.name.toUpperCase() %>
                        </span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <!-- User image -->
                        <li class="user-header bg-purple">
                            <img src="<%= admin.profile ? `/${admin.profile}` : '/assets/images/user.png' %>"
                                class="img-circle elevation-2" alt="User Image">
                            <p>
                                <%= admin.role %>
                            </p>
                        </li>
                        <!-- Footer -->
                        <li class="user-footer">
                            <a href="/admin/profile" class="btn btn-default btn-flat">Profile</a>
                            <a href="/admin/logout" class="btn btn-default btn-flat float-right">Sign out</a>
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->

        <!-- Main Sidebar -->
        <%- include('./partials/sidebar') %>

            <!-- Content Wrapper -->
            <div class="content-wrapper">
                <div class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1 class="m-0">
                                    <%= locals.title ? title : '' %>
                                </h1>
                            </div>
                            <% if (locals.breadcrumb) { -%>
                                <div class="col-sm-6">
                                    <ol class="breadcrumb float-sm-right bg-body-secondary p-2 rounded-1">
                                        <li class="breadcrumb-item"><a href="<%= baseUrl %>">Dashboard</a></li>
                                        <% breadcrumb.forEach(breadcrumb=> { -%>
                                            <% if (breadcrumb.active) { -%>
                                                <li class="breadcrumb-item active">
                                                    <%= breadcrumb.name %>
                                                </li>
                                                <% } else { -%>
                                                    <li class="breadcrumb-item"><a href="<%= breadcrumb.url %>">
                                                            <%= breadcrumb.name %>
                                                        </a>
                                                    </li>
                                                    <% } -%>
                                                        <% }) -%>
                                    </ol>
                                </div>
                                <% } -%>
                        </div>
                    </div>
                </div>
                <!-- /.content-header -->

                <!-- Main content -->
                <div class="content">
                    <%- body %>
                </div>
                <!-- /.content -->
            </div>
            <!-- /.content-wrapper -->

            <!-- Footer -->
    </div>
    <%- include('partials/footer') %>
        <!-- ./wrapper -->
        <%- include('./partials/dangermodal') %>
            <input type="hidden" value="<%= locals.api ? api : '' %>" id="apiInput">
            <script defer src="/assets/vendor/notify/notify.js"></script>
            <script defer src="/assets/js/main.js" type="module"></script>
</body>

</html>