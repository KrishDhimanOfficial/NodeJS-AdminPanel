<aside class="main-sidebar sidebar-light-danger" elevation-4">
    <!-- Brand Logo -->
    <a href="/admin" class="brand-link mb-3">
        <img src="/assets/images/user.png" alt="logo" class="brand-image img-circle elevation-3"
            style="opacity: .8">
        <span class="brand-text font-weight-light">Site Name</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    <% locals.navigation && navigation.forEach(nav=> { %>
                        <% if (nav.subMenu) { %>
                            <li class="nav-item">
                                <a href="#" class="nav-link <%= locals.activePage && 'active'  %>">
                                    <i class="nav-icon <%= nav.icon %>"></i>
                                    <p>
                                       <%= nav.name %>
                                        <i class="right fas fa-angle-left"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <% nav.subMenu?.forEach(submenu => { %>
                                        <li class="nav-item">
                                            <a href="<%= baseUrl %>/resources/<%= submenu.model %>" class="nav-link">
                                                <i class="far fa-circle nav-icon"></i>
                                                <p>
                                                    <%= submenu.model %>
                                                </p>
                                            </a>
                                        </li>  
                                    <% }) %>
                                </ul>
                            </li>
                            <% } else{ %>
                                <li class="nav-item">
                                    <a href="<%= baseUrl %>/resources/<%= nav.model?.modelName %>" class="nav-link">
                                        <i class="nav-icon <%= nav.icon %>"></i>
                                        <p>
                                            <%= nav.name %>
                                        </p>
                                    </a>
                                </li>
                                <% } %>
                        <% }) %>
            <li class="nav-item">
                <a href="#" class="nav-link">
                    <i class="nav-icon fas fa-tachometer-alt"></i>
                    <p>
                        Settings
                        <i class="right fas fa-angle-left"></i>
                    </p>
                </a>
                <ul class="nav nav-treeview">
                    <li class="nav-item">
                        <a href="/admin/profile" class="nav-link">
                            <i class="far fa-circle nav-icon"></i>
                            <p>Profile Settings</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/" class="nav-link">
                            <i class="far fa-circle nav-icon"></i>
                            <p>Gerneral Settings</p>
                        </a>
                    </li>
                </ul>
            </li>
            </ul>
        </nav>
    </div>
    <!-- /.sidebar -->
</aside>