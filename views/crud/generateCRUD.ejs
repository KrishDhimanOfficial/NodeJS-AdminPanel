<style>
    .iconpicker-popover.fade {
        opacity: 1 !important;
        transition: none !important;
    }
</style>

<link rel="stylesheet" href="/assets/vendor/iconpicker/fontawesome-iconpicker.min.css">

<div class="container">
    <form id="SubmitForm">
        <div class="row">
            <div class="col-12">
                <div class="card card-primary">
                    <div class="card-header bg-purple">
                        <h3 class="card-title">Collection Configuration</h3>
                    </div>
                    <div class="card-body">
                        <div class="row mb-2">
                            <div class="col-12 mb-3">
                                <label for="collection" class="form-label">Collection Name</label>
                                <input type="text" class="form-control" name="collection" id="collection"
                                    placeholder="eg: user, category">
                            </div>

                            <div class="col-md-4 mb-2">
                                <label class="form-label">Other options</label>
                                <div class="d-flex gap-2 flex-wrap">
                                    <div class="form-check">
                                        <input class="form-check-input" name="timeStamp" checked type="checkbox"
                                            id="checkDefault">
                                        <label class="form-check-label" for="checkDefault">TimeStamp</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" name="isSubMenu" type="checkbox" id="isSubMenu">
                                        <label class="form-check-label" for="isSubMenu">Is SubMenu</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" name="prevent_deletion" type="checkbox"
                                            id="prevent_deletion">
                                        <label class="form-check-label" for="prevent_deletion">Prevent Deletion</label>
                                    </div>
                                </div>
                            </div>

                            <div id="mainIcon" class="col-md-4 mb-2">
                                <label for="mainIcon" class="form-label">Icon</label>
                                <input type="text" class="form-control iconpicker" name="icon"
                                    placeholder="search Icon" />
                            </div>
                            <div class="col-md-4">
                                <div class="d-flex gap-2 align-items-center">
                                    <label for="" class="form-label m-0">OverWrite DataTable API</label>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" name="dataTableApi_check" type="checkbox"
                                            id="overwrite_dataTableApi_checkBox" >
                                        <label class="form-check-label" for="overwrite">Overwrite</label>
                                    </div>
                                </div>
                                    <input id="dataTableApi" type="text" name="dataTableApi" class="form-control d-none"
                                        value="<%= baseUrl %>">
                            </div>
                        </div>

                        <!-- Submenu Settings -->
                        <div class="row d-none" id="subMenusettings">
                            <div class="col-md-4 mb-2">
                                <label for="navName" class="form-label">Navigation Name</label>
                                <input type="text" class="form-control" name="name" id="navName"
                                    placeholder="eg: Peoples, Categories">
                            </div>
                            <div class="col-md-4 mb-2">
                                <label for="iconpicker" class="form-label">Icon</label>
                                <input type="text" class="form-control iconpicker" name="icon"
                                    placeholder="search Icon" />
                            </div>
                            <div class="col-md-4 mb-2">
                                <div class="d-flex flex-column">
                                    <label for="model" class="form-label">Model</label>
                                    <select name="model" id="model" multiple class="select2 form-control">
                                        <% collections.forEach(collection=> { -%>
                                            <option value="<%= collection.model %>">
                                                <%= collection.model %>
                                            </option>
                                            <% }) -%>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!-- Prevent Deletion -->
                        <div id="preventDeletionRow" class="row d-none">
                            <div class="col-md-8 mb-2 d-flex flex-column">
                                <label for="modelDependencies" class="form-label">Model Not To Delete</label>
                                <select name="modelDependencies" class="select2 form-control" multiple
                                    id="modelDependencies">
                                    <% collections.forEach(col=> { -%>
                                        <% if (col.fields?.length> 0) { -%>
                                            <optgroup label="<%= col.model.toUpperCase() %>">
                                                <% col.fields?.forEach(f=> { -%>
                                                    <option value="<%= col.model %>|<%= f %>">
                                                        <%= col.model %> | <%= f %>
                                                    </option>
                                                    <% }) -%>
                                            </optgroup>
                                            <% } -%>
                                                <% }) -%>
                                </select>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!-- Add Fields -->
        <div class="row">
            <div class="col-12">
                <div class="card card-primary">
                    <div class="card-header bg-purple">
                        <h3 class="card-title">Add Field</h3>
                    </div>
                    <div class="card-body">
                        <div id="addField"></div>
                        <div class="row">
                            <div class="col-12">
                                <button id="addFieldBtn" type="button" class="mb-3 btn btn-dark float-end">Add
                                    Fields</button>
                            </div>
                            <div class="col-12">
                                <div class="d-flex gap-2 justify-content-end align-items-center">
                                    <label class="form-label m-0"> Rewrite HTML Files : </label>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" name="create" type="checkbox" id="create"
                                            checked />
                                        <label class="form-check-label" for="create">Create</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" name="edit" type="checkbox" id="edit" checked />
                                        <label class="form-check-label" for="edit">Edit</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" name="view" type="checkbox" id="view" checked />
                                        <label class="form-check-label" for="view">View</label>
                                    </div>
                                </div>
                                <!-- <div class="d-flex justify-content-end align-items-center">
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" name="rewrite_files" type="checkbox" checked
                                            id="makerewritefiles" />
                                        <label class="form-check-label m-0" for="makerewritefiles">
                                            Rewrite EJS Files
                                        </label>
                                    </div>
                                </div> -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Submit -->
        <div class="row justify-content-center">
            <div class="col-4">
                <button id="submitFormBtn" class="btn btn-dark mb-3 mx-auto d-block">Generate</button>
            </div>
        </div>
    </form>
</div>